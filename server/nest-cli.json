{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "assets": [
    {
      "include": "./views",
      "outDir": "dist",
      "watchAssets": true
    },
    {
      "include": "public/**/*",
      "outDir": "dist"
    }
  ],
  "compilerOptions": {
    "deleteOutDir": true
  }
}
